{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "eslint-plugin-jsx-a11y", "eslint-plugin-react"],
  "extends": ["airbnb", "airbnb-typescript", "plugin:@typescript-eslint/recommended", "prettier"],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "ignorePatterns": ["**/dist/*.js"],
  "rules": {
    "import/extensions": ["error", "never", { "svg": "always" }],
    "import/prefer-default-export": "off",
    "import/no-extraneous-dependencies": "off",
    "import/no-cycle": "off",
    "max-len": [
      "error",
      { "code": 120, "ignorePattern": "(d=\"([\\s\\S]*?)\")|(^import\\s.+\\sfrom\\s.+;$)", "ignoreUrls": true }
    ],
    "no-await-in-loop": "off",
    "no-confusing-arrow": "off",
    "no-console": "off",
    "no-extra-boolean-cast": "off",
    "no-misleading-character-class": "off",
    "no-nested-ternary": "off",
    "no-param-reassign": "off",
    "no-underscore-dangle": "off",
    "react/jsx-props-no-spreading": "off",
    "react/self-closing-comp": "warn",
    "react/no-unused-prop-types": "off",
    "react/require-default-props": "off",
    "@typescript-eslint/ban-ts-comment": "off",
    "@typescript-eslint/no-empty-interface": "off",
    "@typescript-eslint/no-extra-semi": "off",
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/no-shadow": "off",
    "@typescript-eslint/no-unused-expressions": "off",
    "@typescript-eslint/no-unused-vars": "error",
    "@typescript-eslint/no-var-requires": "off",
    "@typescript-eslint/naming-convention": "off"
  }
}
